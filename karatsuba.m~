function result=karatsuba(x, y, b)
   % Karatsuba multiplication algorithm
   
%   p = karatsuba(x, y, b) returns the product x * y where x and y are two
%   integers in base b.
 
%   p = karatsuba(x, y) returns the product x * y where x and y are two
%   integers in base 10.

    % Default base: 10
    if nargin == 2
        b = 10;
    end
    
    if (numel(num2str(x))==1 || numel(num2str(y))==1)
        result=x*y;
    else
       max_size = max(numel(int2str(x)), numel(int2str(y)));
       m = max_size / 2;
       
       x1 = fix(x/(b^m));
       x0 = mod(x, b^m);
       y1 = fix(y/(b^m));
       y0 = mod(y, b^m);
       
       z2 = karatsuba(x1, y1);
       z0 = 
    end
end